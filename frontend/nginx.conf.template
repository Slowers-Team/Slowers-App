server {
    listen 8081;
    server_name localhost;

    location = / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    }

    location /assets {
        root   /usr/share/nginx/html/assets;
    }

    location ~ ^/api/(.*) {
        return 308 ${BACKEND_URL}/api/$1;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }

    location ~ ^/.* {
        return 308 /
    }
}
